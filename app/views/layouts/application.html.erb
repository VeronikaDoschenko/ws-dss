<% if notice or alert%>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<% else %>
  <p>
  <%= link_to_unless I18n.locale == :ru, "Русский", url_for(params.merge(locale: :ru)) %>
  |
  <%= link_to_unless I18n.locale == :en, "English", url_for(params.merge(locale: :en)) %>
  </p>
<% end %>

<p>
  
<span><%= link_to t(:main_page), root_url %></span>&nbsp;&nbsp;&nbsp;&nbsp
