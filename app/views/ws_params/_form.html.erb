<%= form_for(@ws_param) do |f| %>
  <% if @ws_param.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ws_param.errors.count, "error") %> Не возможно сохранение параметра:</h2>

      <ul>
      <% @ws_param.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Название" %><br>
    <%= f.text_field :name, size: 50 %>
  </div>
  <div class="field">
    <%= f.label :descr, "Описание" %><br>
    <%= f.text_area :descr, autocomplete: "off", cols: 103, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :is_int, "Целочисленный" %><br>
    <%= f.check_box :is_int %>
  </div>
  <div class="field">
    <%= f.label :dim, "Число измерений (0-число, 1-вектор, 2-матрица...)" %><br>
    <%= f.number_field :dim, min: 0, max: 7 %>
  </div>
  <div class="field">
    <%= f.label :min_val, "Минимальное значение" %><br>
    <%= f.text_field :min_val %>
  </div>
  <div class="field">
    <%= f.label :max_val, "Максимальное значение" %><br>
    <%= f.text_field :max_val %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
