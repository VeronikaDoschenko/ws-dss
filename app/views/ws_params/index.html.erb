<h3><%=t('views.ws_params.list_of_ws_params')%></h3>

<table class="table">
  <thead>
    <tr>
      <th><%=t('views.ws_params.name')%></th>
      <th><%=t('views.ws_params.descr')%></th>
      <th><%=t('views.ws_params.integer')%></th>
      <th><%=t('views.ws_params.number_of_meas')%></th>
      <th><%=t('views.ws_params.min_value')%></th>
      <th><%=t('views.ws_params.max_value')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ws_params.each do |ws_param| %>
      <tr>
        <td><%= ws_param.name %></td>
        <td><%= ws_param.descr %></td>
        <td><%= ((ws_param.is_int) ? "Да":"Нет") %></td>
        <td><%= ws_param.dim %></td>
        <td><%= ws_param.min_val %></td>
        <td><%= ws_param.max_val %></td>
        <td><%= link_to ws_param, class: "btn btn-default", title: t('show') do %>
              <i class="glyphicon glyphicon-zoom-in"></i>
            <% end %>
        </td>
        <td>
          <% if can? :update, ws_param %>
            <%= link_to edit_ws_param_path(ws_param), class: "btn btn-default", title: t('edit') do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, ws_param %>
            <%= link_to ws_param, class: "btn btn-default", method: :delete, title: t('delete'), data: { confirm: t('are_you_sure') } do %>
                <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<% if can? :create, WsParam %>  
<%= link_to t('views.ws_params.new_ws_params'), new_ws_param_path %>
<% end %>
