<h3>Список моделей</h1>


<table class="table">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Описание</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ws_models.each do |ws_model| %>
        <tr>
          <td><%= ws_model.name %></td>
          <td><small><%= ws_model.descr %></small></td>
          <td><%= ws_model.model_url %></td>
          <td>
            <%= link_to ws_model, class: "btn btn-default", title: "Показать" do %>
              <i class="glyphicon glyphicon-zoom-in"></i>
            <% end %>
          </td>
          <td>
            <% if can? :update, ws_model %>
              <%= link_to  edit_ws_model_path(ws_model), class: "btn btn-default", title: "Редактировать" do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, ws_model %>
              <%= link_to ws_model, class: "btn btn-default", method: :delete, title: "Удалить", data: { confirm: 'Вы уверены?' } do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br/>

<% if can? :create, WsModel %>  
  <%= link_to 'Создать модель', new_ws_model_path %>
<% end %>
