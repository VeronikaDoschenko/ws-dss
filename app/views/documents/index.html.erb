<p id="notice"><%= notice %></p>

<h3><%=t('views.documents.list_of_documents')%></h3>

<table class="table">
  <thead>
    <tr>
      <th><%=t('views.documents.name')%></th>
      <th><%=t('views.documents.filename')%></th>
      <th><%=t('views.documents.content_type')%></th>
      <th><%=t('views.documents.document')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.filename %></td>
        <td><%= document.content_type %></td>
        <td><%= link_to t('download'), show_content_document_path(document) %></td>
        <td><%= link_to t('show'), document %></td>
        <td><%= link_to t('edit'), edit_document_path(document) %></td>
        <td><%= link_to t('destroy'), document, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.documents.new_document'), new_document_path %>
