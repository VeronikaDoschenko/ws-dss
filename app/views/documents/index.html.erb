<p id="notice"><%= notice %></p>

<h1>Список документов</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Filename</th>
      <th>Content type</th>
      <th>Документ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.filename %></td>
        <td><%= document.content_type %></td>
        <td><%= link_to 'Скачать', show_content_document_path(document) %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

