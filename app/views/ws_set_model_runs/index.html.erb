<h1>Список множеств прогонов</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Мощность</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ws_set_model_runs.each do |ws_set_model_run| %>
      <tr>
        <td><%= ws_set_model_run.name %></td>
        <td><%= ws_set_model_run.descr %></td>
        <td><%= ws_set_model_run.ws_model_runs.count %></td>
        <td><%= link_to ws_set_model_run, class: "btn btn-default", title: "Показать" do %>
              <i class="glyphicon glyphicon-zoom-in"></i>
            <% end %>
        </td>
        <td>
          <% if can? :update, ws_set_model_run %>    
            <%= link_to edit_ws_set_model_run_path(ws_set_model_run), class: "btn btn-default", title: "Редактировать" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, ws_set_model_run %> 
            <%= link_to ws_set_model_run, class: "btn btn-default", method: :delete, title: "Удалить", data: { confirm: 'Вы уверены?' } do %>
                <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новое множество', new_ws_set_model_run_path %>
