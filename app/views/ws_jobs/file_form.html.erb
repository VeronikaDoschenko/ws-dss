<h3><%= t('views.ws_jobs.attachment_to_the_problem') %></h3>
<%= form_for(@ws_job, :url => file_save_ws_job_path(@ws_job) ) do |f| %>
  <% if @ws_job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ws_job.errors.count, t('error')) %> <%= t('views.ws_jobs.cant_save_attachment') %>:</h2>

      <ul>
      <% @ws_job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.file_field :file, accept: 'application/pdf' %>
  </div>
  <div class="actions">
    <%= f.submit t('save') %>
  </div>
<% end %>
<%= link_to t('show'), @ws_job %> |
<%= link_to t('back'), ws_jobs_path %>