<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, t('error')) %> <%= t('views.students.cant_save_student') %>:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('views.students.name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('views.students.mname') %><br>
    <%= f.text_field :mname %>
  </div>
  <div class="field">
    <%= f.label t('views.students.surname') %><br>
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label t('views.students.serial') %><br>
    <%= f.text_field :serial %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :student_group_id, t('views.students.group') %><br/>
    <%= f.collection_select(:student_group_id, StudentGroup.order(:name), :id, :name, :include_blank => true) %>
  </div>

  <div class="actions">
    <%= f.submit t('views.students.submit_student')%>
  </div>
<% end %>
