<%= form_for @translation, url: locale_translation_path do |form| %>
  <%= form.label t('views.translations.locale')  %> <%= form.text_field :locale, readonly: true %>
  <%= form.label t('views.translations.key') %> <%= form.text_field :key, readonly: true %>
  <%= form.label t('views.translations.translation') %> <%= form.text_area :value %>

  <%= form.submit t('views.translations.save_translation') %> <%= link_to t('cancel'), locale_translations_url(@locale) %>
<% end %>

