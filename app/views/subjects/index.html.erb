<p id="notice"><%= notice %></p>

<h3><%=t('views.subjects.list_of_subjects')%></h3>

<table class="table">
  <thead>
    <tr>
      <th><%=t('views.subjects.name')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to t('show'), subject %></td>
        <td><%= link_to t('edit'), edit_subject_path(subject) %></td>
        <td><%= link_to t('destroy'), subject, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.subjects.new_subject'), new_subject_path %>
