<%= form_for(@ws_method) do |f| %>
  <% if @ws_method.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ws_method.errors.count, t('error')) %> <%= t('views.ws_methods.cant_save_ws_method') %>:</h2>

      <ul>
      <% @ws_method.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, t('views.ws_methods.name') %><br/>
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :descr, t('views.ws_methods.descr') %><br/>
    <%= f.text_area :descr, autocomplete: "off", cols: 100, rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :code, t('views.ws_methods.code_of_method') %><br/>
    <%= f.text_area :code, autocomplete: "off", cols: 100, rows: 7 %>
  </div>
  
  <div class="field">
    <%= f.label :input, t('views.ws_methods.input_data') %><br/>
    <%= f.text_area :input, autocomplete: "off", cols: 100, rows: 7 %>
  </div>
  
  <div class="field">
    <%= f.label :format_output, t('views.ws_methods.output_format')%><br/>
    <%= f.text_field :format_output, default: 'text', cols: 100, rows: 7 %>
  </div>

  <div class="field">
    <%= f.label :test_input, t('views.ws_methods.example_input_data') %><br/>
    <%= f.text_area :test_input, autocomplete: "off", cols: 100, rows: 7 %>
  </div>

  <div class="field">
    <%= f.label :test_output, t('views.ws_methods.example_output_data') %><br/>
    <%= f.text_area :test_output, autocomplete: "off", cols: 100, rows: 7 %>
  </div>
  
  <div class="field">
      <%= f.label :role_ids, t('views.ws_methods.accessibility') %>
      <% WsModelRun.available_roles.each do |r| %>
        <%= check_box_tag "ws_method[role_ids][]", r.id, @ws_method.roles.include?(r) %>
        <%= r.name %>
      <% end %>
  </div>
  
  <div class="actions">
    <%= f.submit t('save') %>
  </div>
<% end %>
